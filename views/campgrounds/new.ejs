<%- include('../partials/header') %>

<div class="container">
    <div class="justify-content-center row">
        <h1 class=" col-md-12 text-center">Create a new CampGround</h1>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds" method="post" enctype="multipart/form-data">
                <!-- the names of the inputs were changed bc of the use of cloudinary, from..
            name=name, name=description, name=price bc of the use of cloudinary -->
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="campground[name]" placeholder="Camp Name">
                    <small id="nameHelp" class="form-text text-muted">name goes here</small>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="description" name="campground[description]"
                        placeholder="Camp Description">
                    <small id="descriptionHelp" class="form-text text-muted">say something about this camp</small>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" class="" id="image" name="image" accept="image/*" required>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" id="price" name="campground[price]" min="0.01"
                        step="0.01">
                    <small id="priceHelp" class="form-text text-muted">in US dollars($usd)</small>
                </div>
                <button type="submit" class="btn btn-secondary btn-block">Submit</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>
<%- include('partials/header') %>
<div class="container">
    <div class="justify-content-center row">
        <h1 class="col-md-12 text-center">Sign Up</h1>
        <div class="col-xs-6 col-md-6 col-lg-4">
            <form action="/register" method="post">
                <div class="form-group">
                    <input type="text" class="form-control foc" id="username" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control foc" id="password" name="password"
                        placeholder="Password">
                    <small id="passwordHelp" class="form-text text-muted">case sensitive</small>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control foc" id="admin" name="adminCode" placeholder="Code">
                    <small id="adminHelp" class="form-text text-muted">ignore if you are not admin</small>
                </div>
                <button type="submit" class="btn btn-success btn-block">GO!</button>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>
<%- include('partials/footer') %>
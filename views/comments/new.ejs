<%- include('../partials/header') %>

<div class="container">
    <div class="justify-content-center row">
        <h1 class="col-md-12 text-center">Add a comment to <%= campground.name %> </h1>
        <div class="col-xs-8 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground.slug %>/comments" method="post">
                <div class="form-group">
                    <label for="text">Comment</label>
                    <input type="text" class="form-control" id="text" name="comment[text]">
                    <small id="textHelp" class="form-text text-muted">Text goes here</small>
                </div>
                <button type="submit" class="btn btn-secondary btn-block">Comment</button>
            </form>
            <a href="/campgrounds/<%= campground.slug %>">Go Back</a>
        </div>

    </div>
</div>
<%- include('../partials/footer') %>
<%- include('partials/header') %>

<div class="container">
    <div class="justify-content-center row">
        <h1 class="col-md-12 text-center">Login</h1>
        <div class="col-xs-8 col-md-6 col-lg-4">
            <form action="/login" method="post">
                <div class="form-group">
                    <input type="text" class="form-control foc" id="username" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control foc" id="password" name="password"
                        placeholder="Password">
                    <small id="passwordHelp" class="form-text text-muted">Case Sensitive</small>
                </div>
                <button type="submit" class="btn btn-success btn-block">Login!</button>
            </form>
            <a href="/register">Sign Up</a>
        </div>

    </div>
</div>

<%- include('partials/footer') %>